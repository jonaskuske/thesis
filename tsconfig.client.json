{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["**/*", "**/*.vue"],
  "exclude": [
    "**/*.server.ts",
    "server/**/*",
    "vite.config.*",
    "**/serviceWorker.ts",
    "**/service-worker.ts",
    "**/serviceworker.ts",
    "**/sw.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "Node16"
  }
}
