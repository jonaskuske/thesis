{
  "name": "thesis",
  "packageManager": "yarn@3.2.3",
  "private": true,
  "//": "until nodejs/node#43772 ships, then use tsx in server scripts",
  "type": "commonjs",
  "scripts": {
    "dev": "run server",
    "prod": "run build && run server:prod",
    "build": "vite build && run build:sw",
    "build:sw": "esbuild ./serviceWorker.ts --define:import.meta.env.DEV=false --define:import.meta.env.PROD=true --bundle --platform=browser --target=es2022 --minify --sourcemap --outfile=dist/client/serviceWorker.ts",
    "server": "node -r @esbuild-kit/cjs-loader ./server",
    "server:prod": "NODE_ENV=production node -r @esbuild-kit/cjs-loader ./server",
    "lint": "eslint . --ext .js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue",
    "typecheck": "vue-tsc --noEmit",
    "typecheck:watch": "run typecheck --watch",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@esbuild-kit/cjs-loader": "^2.3.3",
    "@fastify/compress": "^6.1.1",
    "@fastify/helmet": "^10.0.0",
    "@fastify/middie": "^8.0.0",
    "@fastify/static": "^6.5.0",
    "@vue/server-renderer": "^3.2.39",
    "fastify": "^4.6.0",
    "vite-plugin-ssr": "^0.4.34",
    "vue": "^3.2.39"
  },
  "devDependencies": {
    "@types/connect": "^3.4.35",
    "@types/node": "^16.11.59",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/compiler-sfc": "^3.2.39",
    "@vue/tsconfig": "^0.1.3",
    "@yarnpkg/sdks": "^3.0.0-rc.18",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "~2.7.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.1",
    "vue-tsc": "^0.40.13"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md,json,webmanifest}": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:vue/vue3-recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "project": [
        "./tsconfig.json",
        "./tsconfig.sw.json"
      ],
      "extraFileExtensions": [
        ".vue"
      ]
    },
    "globals": {
      "$": "readonly",
      "$$": "readonly",
      "$ref": "readonly",
      "$computed": "readonly",
      "$shallowRef": "readonly",
      "$customRef": "readonly",
      "$toRef": "readonly"
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-unsafe-argument": "off"
    }
  },
  "eslintIgnore": [
    "*.min.*",
    "*.d.ts",
    "CHANGELOG.md",
    "dist",
    "LICENSE*",
    "output",
    "coverage",
    "public",
    "temp",
    "packages-lock.json",
    "pnpm-lock.yaml",
    "yarn.lock",
    "__snapshots__",
    "!.github",
    "!.vitepress",
    "!.vscode"
  ]
}
