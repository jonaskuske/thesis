{
  "name": "thesis",
  "packageManager": "yarn@4.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run server",
    "prod": "run build && run server:prod",
    "build": "vite build && run build:sw && cp dist/assets.json dist/client",
    "build:sw": "esbuild ./serviceWorker.ts --define:import.meta.env.DEV=false --define:import.meta.env.PROD=true --define:import.meta.env.BASE_URL=\\\"/\\\" --bundle --platform=browser --target=es2022 --minify --sourcemap --outfile=dist/client/serviceWorker.ts",
    "server": "tsx ./server",
    "server:prod": "NODE_ENV=production tsx ./server",
    "lint": "eslint . --ext .js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue",
    "typecheck": "vue-tsc --noEmit",
    "typecheck:watch": "run typecheck --watch",
    "postinstall": "husky install || true"
  },
  "dependencies": {
    "@fastify/compress": "^7.0.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/middie": "^8.3.0",
    "@fastify/static": "^7.0.0",
    "@vue/server-renderer": "^3.4.15",
    "@vue/tsconfig": "^0.5.1",
    "cookie-store": "^4.0.0-next.4",
    "fastify": "^4.26.0",
    "tsx": "patch:tsx@npm%3A4.7.0#~/.yarn/patches/tsx-npm-4.7.0-86d7b66640.patch",
    "vike": "^0.4.160",
    "vite": "^5.0.12",
    "vue": "^3.4.15",
    "zip-to-city": "^0.1.1"
  },
  "devDependencies": {
    "@types/connect": "^3.4.38",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/compiler-sfc": "^3.4.15",
    "@yarnpkg/sdks": "^3.1.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.21.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "~3.2.5",
    "typescript": "^5.3.3",
    "vue-tsc": "^1.8.27"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md,json,webmanifest}": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:vue/vue3-recommended",
      "prettier"
    ],
    "env": {
      "es2022": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaVersion": "latest",
      "project": [
        "./tsconfig.json",
        "./tsconfig.sw.json"
      ],
      "extraFileExtensions": [
        ".vue"
      ]
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "vue/no-setup-props-destructure": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_|ctx|err|res|rej|resolve|reject|resp|req|response|request|cb|callback"
        }
      ],
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/require-await": "off",
      "@typescript-eslint/no-this-alias": "off",
      "vue/require-toggle-inside-transition": "off"
    }
  },
  "eslintIgnore": [
    "*.min.*",
    "*.d.ts",
    "CHANGELOG.md",
    "dist",
    "LICENSE*",
    "output",
    "coverage",
    "public",
    "temp",
    "packages-lock.json",
    "pnpm-lock.yaml",
    "yarn.lock",
    "yarn/",
    "__snapshots__",
    "!.github",
    "!.vitepress",
    "!.vscode"
  ]
}
